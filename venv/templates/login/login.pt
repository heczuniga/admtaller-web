
<div metal:use-macro="load: ../shared/_layout-index.pt">
    <div metal:fill-slot="content" tal:omit-tag="True">
        <div class="content">

            <!-- Ingrese contenido acá -->
            <div class="container-fluid">
                <!-- Definir primero columnas de bootstrap -->
                <div class="row align-items-center">
                    <div class="col-3"></div>
                    <div class="destacado col-6">

                        <form class="py-4" action="/principal/0/">
                        <div class="mb-3">
                            <label for="email" class="form-label">Login</label>
                            <input maxlength="40" type="email" class="form-control" id="email" aria-describedby="emailHelp">
                        </div>
                        <div class="mb-3">
                            <label for="contrasena" class="form-label">Contraseña</label>
                            <input maxlength="40" type="password" class="form-control" id="contrasena">
                        </div>
                        <button type="submit" class="btn btn-warning pb-2">Ingresar</button>
                        </form>

                    </div>
                    <div class="col-3"></div>
                </div>
            </div>

        </div>
    </div>

    <!-- CSS adicional -->
    <div metal:fill-slot="additional-css" tal:omit-tag="True">
    </div>
</div>